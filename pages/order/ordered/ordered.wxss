.header-title {
  text-align: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 31rpx;
  font-weight: 600;
}

.sort-list {
  justify-content: space-around;
  display: flex;
  background: white;
  width: 100%;
  height: 80rpx;
  font-size: 27rpx;
  color: #495060;
  align-content: center;
  border: 1rpx solid #ececec;
}

.sort {
  text-align: center;
  margin: auto 0;
  height: 30rpx;
  line-height: 30rpx;
  border-right: 1rpx solid #ececec;
  flex: 1;
}

.sort-active {
  color: black;
  font-weight: 800;
}



::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.main {
  width: 85%;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 40rpx;
  box-shadow: 0 0 15rpx rgba(62, 155, 214, 0.2);
  /* padding: 100rpx 50rpx 20rpx 50rpx;   */
  padding: 5rpx;
  padding-top: 20rpx;
  box-sizing: border-box;  
}
